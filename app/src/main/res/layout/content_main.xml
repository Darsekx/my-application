<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/BtnActivityOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:text="Move to Activity 2"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonHappy"
        android:layout_width="0dp"
        android:layout_height="@dimen/dpHeight85"
        android:layout_marginTop="68dp"
        android:text="Happy ｡^‿^｡"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSad"
        android:layout_width="411dp"
        android:layout_height="@dimen/dpHeight85"
        android:layout_marginTop="12dp"
        android:text="Sad (︶︹︺)"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHappy"
        tools:visibility="visible" />

    <Button
        android:id="@+id/buttonAngry"
        android:layout_width="0dp"
        android:layout_height="@dimen/dpHeight85"
        android:layout_marginTop="12dp"
        android:text="Angry ಠ_ಠ"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSad" />

    <Button
        android:id="@+id/buttonFearful"
        android:layout_width="0dp"
        android:layout_height="@dimen/dpHeight85"
        android:layout_marginTop="12dp"
        android:text="Fearful ⊙﹏⊙"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAngry" />

    <Button
        android:id="@+id/buttonLonely"
        android:layout_width="0dp"
        android:layout_height="@dimen/dpHeight85"
        android:layout_marginTop="12dp"
        android:text="Lonely 	(っ˘̩╭╮˘̩)っ"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFearful" />

    <Button
        android:id="@+id/buttonJealous"
        android:layout_width="0dp"
        android:layout_height="@dimen/dpHeight85"
        android:layout_marginTop="12dp"
        android:text="Jealous (ﾉ´ з `)ノ"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLonely" />

</androidx.constraintlayout.widget.ConstraintLayout>